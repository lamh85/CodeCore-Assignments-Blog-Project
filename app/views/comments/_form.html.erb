<% if @comment.errors.any? %>
  <ul>
  <!-- Removed .full_messages because it includes the attribute name -->
  <% @comment.errors.each do |field,msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @comment, url: post_comments_path(@post), remote: true do |f| %>
  <%= f.text_area :body, class: "comment" %>
  <%= f.submit "Submit Comment" %>
<% end %>